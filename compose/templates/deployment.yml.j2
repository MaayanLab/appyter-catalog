    http:
      paths:
      - backend:
          serviceName: appyter-{{ appyter['name'].lower() }}
          servicePort: 80
        path: /{{ appyter['name'] }}/
{{ '{{- if .Values.TLS_ISSUER }}' }}
  tls:
